#ifndef OSGEARTH_MP_ANNOTATION_GROUP_SG_H
#define OSGEARTH_MP_ANNOTATION_GROUP_SG_H 1

#include <osgEarth/MPScreenSpaceLayoutSG>
#include <osgEarthAnnotation/MPAnnotationGroup>
#include <osgEarthAnnotation/MPStateSetFontAltas>


namespace osgEarth { namespace Annotation
{

class OSGEARTHANNO_EXPORT MPAnnotationGroupSG : public MPAnnotationGroup
{
public:

    MPAnnotationGroupSG(const osgDB::Options* readOptions, TextSymbol* textSym);

    // Add an annotation (list of drawables corresponding to one feature)
    virtual long addAnnotation(const Style& style, Geometry *geom, const osgDB::Options* readOptions, unsigned long long instanceIndex=0) override;

    // Highlight an Annotation
    virtual void setHighlight( long id, bool highlight = true ) override;
    virtual void clearHighlight() override;
    
    // change icon color
    virtual void setIconColor(long id, const Color &color ) override;

    // update icon
    virtual void updateIcon( long id, const std::string &icon ) override;

    // change the visibility status
    virtual void setVisible( long id, bool visible ) override;

    // remove one annotation
    void removeAnnotation( long id );

    // Need a custom bounding sphere for the culling process
    virtual osg::BoundingSphere computeBound () const override;

    // change the position of one annotation
    void updateGeometry(long id, osgEarth::Symbology::Geometry *geom , double geographicCourse = DBL_MAX);
    void updateGeometry(long id, GeoPoint &pos , double geographicCourse = DBL_MAX);

    // get the current position of one annotation
    const GeoPoint& getPosition(long id) const;

protected:

    virtual ~MPAnnotationGroupSG() { }

protected:

    // unique stateset for all annotations
    static osg::observer_ptr<MPStateSetFontAltas> s_atlasStateSet;
    osg::ref_ptr<MPStateSetFontAltas> _atlasStateSet;
};


} } // namespace osgEarth::Annotation

#endif //OSGEARTH_MP_ANNOTATION_GROUP_SG_H
