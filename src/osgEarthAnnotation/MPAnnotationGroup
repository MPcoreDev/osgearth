#ifndef OSGEARTH_MP_ANNOTATION_GROUP_H
#define OSGEARTH_MP_ANNOTATION_GROUP_H 1

#include <osgEarthSymbology/Style>
#include <osgEarthSymbology/Geometry>
#include <osgEarthAnnotation/Export>
#include <osg/Group>


namespace osgEarth { namespace Annotation
{

using namespace osgEarth;
using namespace osgEarth::Symbology;

typedef std::map<long, osg::ref_ptr<osg::Node>> MainGeomList;


class OSGEARTHANNO_EXPORT MPAnnotationGroup : public osg::Group
{
public:

    // Add an annotation (list of drawables corresponding to one feature)
    virtual long addAnnotation(const Style& style, Geometry *geom, const osgDB::Options* readOptions) = 0;

    // Highlight an Annotation
    virtual void setHighlight( long id, bool highlight = true );
    virtual void clearHighlight();
    
    // change icon color
    virtual void setIconColor( long id, const Color& color );

    // change the visibility status
    virtual void setVisible( long id, bool visible );

    // provide the list of drawable but with only one geometry per ID
    // (main icon geom in case of multi geometry implementation)
    virtual MainGeomList& getMainGeomDrawableList() { return _mainGeomDrawableList; }
    
protected:

    virtual ~MPAnnotationGroup() { }

    MainGeomList _mainGeomDrawableList;

};


} } // namespace osgEarth::Annotation

#endif //OSGEARTH_MP_ANNOTATION_GROUP_H
